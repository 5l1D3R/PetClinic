pipeline {
    agent any

    tools {
        maven "3.8.0" // You need to add a maven with name "3.6.0" in the Global Tools Configuration page
    }

    stages {
        stage("Build") {
            steps {
            sh 'cp settings.xml /root/.m2/'
            sh "mvn clean install -Dcheckstyle.skip"
            }
        }
    
    
        stage("Dcoker") {
            steps {
            sh "docker build -t ledger-service ."
            }
        }
    }    
    
    

    post {
        always {
            cleanWs()
        }
    }
}
