name: Package Pet Clinic

on:
  push:
    branches: [main]

jobs:
  build:
      runs-on: windows-latest
      steps:
      - uses: actions/checkout@v3
      - name: Build
        run: mvn package
      - name: Test
        run: mvn test
      - name: Create Package
        run: mvn pack
      - name: Publish Package
        run: mvn deploy --registry https://npm.pkg.github.com/
