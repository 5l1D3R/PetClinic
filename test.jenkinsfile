pipeline {
    agent any

    parameters { 
                 choice(name: 'MYBRANCH', choices: ['main', 'master'], description: 'maintain multiple branches')
                 string(name: 'MVNPACK', defaultValue: 'package', description: 'USER MAVEN') 
    }
    stages {
        stage('start status') {
            steps {
                mail subject: 'ready to clone', 
                     body: 'ready to clone'
                     to: 'nagarjuna33@gmail.com'
            }
        }
        stage('clone') {
            steps {
             git url: 'https://github.com/nagarjunaduggireddy/spring-petclinicmain.git', branch: "${params.MYBRANCH}"
            }
        }
         stage('Deploy') {
            steps {
                sh "mvn ${params.MVNPACK}"
            }
        }
        stage('package status') {
            steps{
                mail subject: 'package completed', 
                     body: 'package completed'
                     to: 'nagarjuna33@gmail.com'
            }
        }
        stage('JTest') {
            steps {
                junit testResults: '**/surefire-reports/*.xml'
            }
        }
        stage('test status') {
            steps{
                mail subject: 'package completed', 
                     body: 'package completed'
                     to: 'nagarjuna33@gmail.com'

           }
       }
    }
}

