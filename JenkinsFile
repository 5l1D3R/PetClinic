pipeline{
    agent any

    tools{
        maven 'maven'
    }

    stages{
        stage("sanity check"){
            steps{
                sh "java --version"
            }
        }
        stage("build"){
            steps{
                sh 'mvn -Dmaven.test.failure.ignore=true compile'
            }
        }
        stage("test"){
            steps{
                sh 'mvn -Dmaven.test.failure.ingore=true test'
                junit 'target/surefire-reports/**/*.xml'
            }
        }
        stage('package'){
            steps{
                sh 'mvn -Dmaven.test.failure.ingore=true package'
            }
        }
    }
}