pipeline{
    agent{label "MAVEN"}
    options{
        timeout(time: 30, unit: 'MINUTES')
    }
    triggers {
         pollSCM('* * * * *')
          }
    stages {
        stage('git') {
            steps {
                git url :'https://github.com/dhille98/spring-petclinic.git' 
                branch : 'dev'
                
            }
        }
        stage('bulid') {
            steps {
                sh 'mvn clean package'
            }
        }
    }
}