pipeline {
    agent { label 'JAVA-11' }
    triggers { pollSCM('* * * * *') }
    stages {
        stage('clone') {
            steps { 
                git branch: 'main', url: 'https://github.com/GUDAPATIVENKATESH/spring-petclinic.git'
            }
        }
        stage('Build') {
            steps {
                sh 'mvn package'
            }
        }
        stage('results') {
            steps {
                junit '**/surefire-reports/*.xml'
            }
        }
    }
}