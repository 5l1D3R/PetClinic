pipeline {
    agent any
    stages {
        stage ('Clone') {
            steps {
                git branch: 'new', url: "https://github.com/neelamkannan/spring-petclinic.git"
            }
        }

        stage ('Artifactory configuration') {
            steps {
                rtServer (
                    id: "jfrog_123",
                    url: "https://kanna07.jfrog.io",
                    credentialsId: "jfrog_cred"
                )

                rtMavenDeployer (
                    id: "MAVEN_DEPLOYER",
                    serverId: "jfrog_123",
                    releaseRepo: kanna-libs-release-local,
                    snapshotRepo: kanna-libs-snapshot-local
                )

            }
        }

        stage ('Exec Maven') {
            steps {
                rtMavenRun (
                    tool: mvn_123, // Tool name from Jenkins configuration
                    pom: 'pom.xml',
                    goals: 'clean install',
                    deployerId: "MAVEN_DEPLOYER"
                )
            }
        }

        stage ('Publish build info') {
            steps {
                rtPublishBuildInfo (
                    serverId: "jfrog_123"
                )
            }
        }
    }
}